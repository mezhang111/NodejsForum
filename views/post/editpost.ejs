<%- include('../_partial/_header'); -%>

<div class="row">
    <div class="col-md-6">
        <h1>Edit Post: <%= post.title %> </h1>
    </div>
</div>

<% if(post.image != null) { %>
    <div class="col-md-6">
        <div class="row">
            <img src="<%= '/' + post.image %>" height="250px">
        </div>
        <div class="row">
            <form action="/posts/deleteImage%>" method="POST">
                <input type="hidden" name="postid" value="<%=post._id%>"/>
                <button class="btn btn-danger">Delete Image</button>
            </form>
        </div>
    </div>
<% } %> 

<div class="row">
    <div class="col-md-6">
        <form action="/posts/update" method="POST" enctype="multipart/form-data">
            <div class="form-group">

                <label for="inputTitle">Title</label>
                <input type="text" class="form-control" placeholder="Title" id="inputTitle" name="title"
                    value="<%= post.title %>" 
                />
            </div>

            <div class="form-group">
                <label for="inputContent">Content</label>
                <textarea class="form-control" rows="3" id="inputContent" placeholder="Content" name="content"><%= post.content %></textarea>
            </div>

            <div class="form-group">
                <input type="file" name="image"/>
            </div>

            <input type="hidden" id="postid" name="postid" value="<%= post._id %>" />
            
            <div class="form-group">
                <button type="submit" class="btn btn-default" href="#" role="button">Update</button>
            </div>
    </div>

    </form>
</div>


<%- include ('../_partial/_footer'); -%>